{
    "compilerOptions": {
      // "module": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "es6",
      "strict": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "dist",
      "alwaysStrict": true,
      "removeComments": true,
      "declaration": true,
      "baseUrl": "src",
      "paths": {
        "@middlewares": ["middlewares/index"],
        "@models": ["models/index"],
        "@models/*": ["models/*"],
        "@utils": ["utils/index"],
        "@utils/*": ["utils/*"],
        "@endpoints/common": ["endpoints/_common"],
        "@endpoints/*": ["endpoints/*"]
      }
    },
    "include": ["src/**/*", "custom.d.ts"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
    "ts-node": {
      "files": true
    }
  }